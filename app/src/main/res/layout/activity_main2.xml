<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main2Activity"
    android:padding="40dp">

    <TextView
        android:text="MENU"
        android:layout_width="207dp"
        android:layout_height="59dp"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        tools:layout_editor_absoluteY="34dp"
        tools:layout_editor_absoluteX="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"/>

    <Button
        android:text="BANGUN DATAR 1"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:id="@+id/btnbangun1"
        tools:layout_editor_absoluteY="314dp"
        tools:layout_editor_absoluteX="124dp"
        android:layout_marginTop="130dp"
        android:layout_below="@+id/bangun1"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="BANGUN DATAR 2"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:id="@+id/btnbangun2"
        tools:layout_editor_absoluteY="314dp"
        tools:layout_editor_absoluteX="124dp"
        android:layout_marginTop="220dp"
        android:layout_below="@+id/bangun2"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="BANGUN RUANG"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:id="@+id/btnruang"
        tools:layout_editor_absoluteY="314dp"
        tools:layout_editor_absoluteX="124dp"
        android:layout_marginTop="310dp"
        android:layout_below="@+id/ruang"
        android:layout_centerHorizontal="true"/>

    <Button

        android:id="@+id/btnkeluar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="420dp"
        android:text="Keluar"
        android:onClick="btnkeluar"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>